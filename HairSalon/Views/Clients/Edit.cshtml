@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model HairSalon.Models.Client

<h1>Edit Client Information</h1>
<h2>@Html.DisplayFor(model => model.Name)</h2>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.ClientId)
  <div class="form-group">    
    @Html.LabelFor(model => model.Name)
    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @required=true })
  </div>
  <div class="form-group">
    @Html.Label("Stylist:")
    @Html.DropDownList("StylistId")
  </div>
  <input type="submit" value="Edit Client" class="btn btn-info" />
}